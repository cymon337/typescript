import express, { Request, Response, NextFunction } from 'express';

const app = express();


app.get('/welcome', (req: Request, res: Response, next: NextFunction) => {
    res.send('welcome!');
});

app.listen('1234', () => {
    console.log(`
  ################################################
  ğŸ›¡ï¸  Server listening on port: 1234ğŸ›¡ï¸
  ################################################
`);
});


